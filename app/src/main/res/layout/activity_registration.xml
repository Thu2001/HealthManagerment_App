<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/custom_bable1"
    tools:context=".mainScreen.orderDate.registration.registration">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/custom_background_1"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:id="@+id/panner1">
        <TextView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Phieu dang ky kham benh"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="Ma hen kham" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="MA VẠCH" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="Thong so ma vach" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="top"
        android:orientation="vertical">
        <TextView
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:text="benh vien thong nhat"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="50dp"
                android:layout_height="50dp"

                app:shapeAppearanceOverlay="@style/Circular"
                app:srcCompat="@drawable/logo2"
                app:strokeColor="@color/white"
                app:strokeWidth="3dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_marginLeft="15dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:text="Khám dịch vụ"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/khoa1"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Khám tổng quát"
                    />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:text="Phòng khám số 01"
                    />
            </LinearLayout>
            
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/logo2"
            app:shapeAppearanceOverlay="@style/Circular"
            app:srcCompat="@drawable/calendar"
            app:strokeColor="@color/white"
            app:strokeWidth="3dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_marginLeft="15dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:text="Thời gian khám"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/ngay"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Thứ 2, 6:30-30/05/2023"
                />
            <TextView
                android:id="@+id/stt"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:text="Số thứ tự 05"
                />
        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/home2"
        android:text="quay về trang chủ"
        android:layout_marginLeft="10dp"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/custom_btn01"
        android:textColor="@color/white"
        app:backgroundTint="@null"
        android:padding="5dp"/>/>


</LinearLayout>